<head>
  <title><% pageTitle %></title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
    crossorigin="anonymous"
  />
</head>
<div class="container">
  <div class="jumbotron">
    <div class="row">
      <div class="col-sm-4">
        <% if(locals.errors){%>
        <div class="alert alert-danger">
          <ul>
            <% errors.forEach(function(item){%>
            <li><%=item.msg %></li>
            <% }) %>
          </ul>
        </div>

        <%}%>
        <form method="POST" action="/editform/submit/<%=editformdata.password %>?_method=PUT">
          <div>
            <label for="email" class="form-label">Email </label>
            <input
              name="email"
              type="email"
              class="form-control"
              id="email"
              aria-describedby="emailHelp"
              value="<%=editformdata.email %>"
            />
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input
                name="password"
                class="form-control"
                id="password"
                value="<%=editformdata.password %>"
              />
            </div>
            <div class="mb-3">
              <label for="age" class="form-label">Age</label>
              <input name="age" class="form-control" id="age" value="<%=editformdata.age %> " />
            </div>
          </div>

          <button type="submit" id="update-button" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
